<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="demo.Perspective"
            id="demo.perspective">
      </perspective>
   </extension>
	<extension
	     point="org.eclipse.ui.commands">
	  <command
	        id="video.command.PlayVideo"
	        name="Play Video">
	  </command>
	</extension>
	<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="video.handler.PlayVideoHandler"
            commandId="video.command.PlayVideo">
      </handler>
	</extension>
 <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:file">
         <command
               commandId="video.command.PlayVideo"
               style="push">
         </command>
      </menuContribution>
   </extension>
	   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/res"
            base-name="/res">
      </resource>
   </extension>
</plugin>
